{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "Why is the sky blue?",
                    "wrap": true,
                    "size": "Medium",
                    "spacing": "Small"
                },
                {
                    "type": "TextBlock",
                    "text": "Results so far",
                    "spacing": "Small"
                },
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center",
                                    "spacing": "None",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Sushi",
                                            "wrap": true
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "spacing": "Small",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "(4 votes)",
                                            "fontType": "Default",
                                            "size": "Small",
                                            "weight": "Lighter"
                                        }
                                    ]
                                }
                            ],
                            "spacing": "Small"
                        }
                    ]
                }
            ]
        }
    ]
}
